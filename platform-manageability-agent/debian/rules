#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_install:
	$(MAKE) DESTDIR=$$(pwd)/debian/platform-manageability-agent PREFIX=/opt/edge-node pmainstall

override_dh_systemd_enable:
	dh_systemd_enable --name=platform-manageability-agent

override_dh_systemd_start:
	dh_systemd_start --name=platform-manageability-agent

override_dh_builddeb:
	dh_builddeb -- -Zxz

override_dh_installsystemd:
	dh_installsystemd --name=platform-manageability-agent

override_dh_auto_build:
	dh_auto_build -- all
