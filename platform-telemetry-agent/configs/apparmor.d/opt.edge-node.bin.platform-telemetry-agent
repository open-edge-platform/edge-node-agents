profile pta_systemctl {
  include <abstractions/base>
  include <abstractions/nameservice>

  capability sys_ptrace,
  capability net_admin,

  /etc/ld.so.cache r,
  /usr/bin/systemctl mr,
  /run/systemd/private rw,
  ptrace (read) peer=unconfined,
}

